{
  "name": "astro-media",
  "description": "Load and transform images and svgs/vectors in your Astro site.",
  "version": "0.0.1",
  "type": "module",
  "types": "./dist/index.d.ts",
  "author": "gvkhna",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gvkhna/astro-media.git"
  },
  "keywords": [
    "astro-integration",
    "astro-component",
    "astro-media",
    "withastro",
    "image",
    "svg",
    "vector"
  ],
  "bugs": "https://github.com/gvkhna/astro-media/issues",
  "homepage": "https://github.com/gvkhna/astro-media",
  "main": "index.ts",
  "exports": {
    ".": "./index.ts",
    "./integration": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**",
    "integration/**",
    "src/**",
    "index.ts"
  ],
  "scripts": {
    "build": "tsc",
    "build:ci": "astro-scripts build \"src/**/*.ts\" && pnpm run postbuild",
    "postbuild": "astro-scripts copy \"src/**/*.wasm\"",
    "dev": "astro-scripts dev \"src/**/*.ts\"",
    "test": "mocha --exit --timeout 20000 test"
  },
  "dependencies": {
    "@altano/tiny-async-pool": "^1.0.2",
    "http-cache-semantics": "^4.1.0",
    "image-size": "^1.0.2",
    "kleur": "^4.1.5",
    "magic-string": "^0.27.0",
    "mime": "^3.0.0",
    "slash": "^4.0.0"
  },
  "devDependencies": {
    "@types/http-cache-semantics": "^4.0.1",
    "@types/mime": "^2.0.3",
    "@types/sharp": "^0.30.5",
    "@types/node": "latest",
    "astro": "latest",
    "chai": "^4.3.6",
    "cheerio": "^1.0.0-rc.11",
    "mocha": "^9.2.2",
    "rollup-plugin-copy": "^3.4.0",
    "sharp": "^0.31.0",
    "vite": "^4.0.3",
    "typescript": "latest"
  },
  "peerDependencies": {
    "sharp": ">=0.31.0"
  },
  "peerDependenciesMeta": {
    "sharp": {
      "optional": true
    }
  }
}
